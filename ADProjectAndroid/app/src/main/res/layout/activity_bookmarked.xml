<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookmarkPage">

    <TextView
        android:id="@+id/bookmarkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:fontFamily="@font/zenkurenaido"
        android:text="@string/bookmark"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:divider="@color/white"
        android:dividerHeight="0dp"
        android:layout_margin="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/bookmarkTitle"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/bm_blankMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/zenkurenaido"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:gravity="center"
        android:text="No bookmarks were selected"
        android:visibility="gone"
         />

</androidx.constraintlayout.widget.ConstraintLayout>